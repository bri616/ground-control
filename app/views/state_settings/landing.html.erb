<!--Landing page-->
<!DOCTYPE html>
<html>
<head>
  <title>Ground Control</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Orbitron:900' %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=PT+Sans+Caption' %>
  <%= javascript_include_tag 'application'  %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body class="landing-page">

  <div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading login-heading">
          <strong>Teleporter Ground Control</strong>
        </div>
        <div class="panel-body">
          <%= form_tag(authenticate_user_path) do %>
            <fieldset>
              <div class="row">
                <div class="center-block">
                  <%= image_tag("teleporter.png", :class => "profile-img") %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12 col-md-10 col-md-offset-1">

                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                      </span>
                      <%= text_field_tag :rank, "Admiral", class: "form-control" %>
                      <!-- <input class="form-control" placeholder="Username" name="loginname" type="text" autofocus> -->
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="glyphicon glyphicon-lock"></i>
                      </span>
                      <%= password_field_tag :password, "test", class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= submit_tag "Sign in", class: "btn btn-lg btn-primary btn-block" %>
                  </div>
                </div>
              </div>
            </fieldset>
          <% end %>
        </div>
        <div class="panel-footer ">
          Don't have an account! <a href="#" onClick=""> Sign Up Here </a>
        </div>
      </div>
    </div>
  </div>
</div>

</body>
</html>
